@model ElectronicApp.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>

    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>


    <tr>
        <th>Price</th>
        <td>@Model.Price.Value.ToString("")</td>
    </tr>

    <tr>
        <th>Availabibility of Purchase</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>

    <tr>
        <th>Category ID</th>
        <td>@Model.Category.CategoryName</td>
    </tr>

    <tr>
        <th>Brand ID</th>
        <td>@Model.Brand.BrandName</td>
    </tr>

    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>

</table>

<a href="/products/index">Back To Products</a>

